<!DOCTYPE html>
<html lang="en">

<head>
  <title>Log in</title>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
</head>

<body>

  <%- include('../resources/components/new_navbar.ejs') %>
  <% var panel=0; %>

  <script>
    function resetFields() {
      document.getElementById('email').value = "";
      document.getElementById('password').value = "";
      document.getElementById('username').value = "";
    }

    function showPanel(panel) {
      resetFields();
      if (panel == 0) {
        document.getElementById('info').style.display = 'block';
        document.getElementById('editEmail').style.display = 'none';
        document.getElementById('editPassword').style.display = 'none';
        document.getElementById('editUsername').style.display = 'none';
      } else if (panel == 1) {
        document.getElementById('info').style.display = 'none';
        document.getElementById('editEmail').style.display = 'block';
        document.getElementById('editPassword').style.display = 'none';
        document.getElementById('editUsername').style.display = 'none';
      } else if (panel == 2) {
        document.getElementById('info').style.display = 'none';
        document.getElementById('editEmail').style.display = 'none';
        document.getElementById('editPassword').style.display = 'block';
        document.getElementById('editUsername').style.display = 'none';
      } else if (panel == 3) {
        document.getElementById('info').style.display = 'none';
        document.getElementById('editEmail').style.display = 'none';
        document.getElementById('editPassword').style.display = 'none';
        document.getElementById('editUsername').style.display = 'block';
      }
    }
  </script>

  <div class="container">
    <div class="row">
      <div class="col-4">
        <div class="container mt-4">
          <div class="card shadow p-2">
            <button class="btn list-group-item list-group-item-action mt-2" onclick="showPanel(0);" style="border-radius: 0;">
              <div class="container">
                Profile
              </div>
            </button>
            <hr>
            <a class="btn list-group-item list-group-item-action" onclick="showPanel(1);" style="border-radius: 0;">
              <div class="container">
                Change E-mail
              </div>
            </a>
            <hr>
            <a class="btn list-group-item list-group-item-action" onclick="showPanel(2);" style="border-radius: 0;">
              <div class="container">
                Change password
              </div>
            </a>
            <hr>
            <a class="btn list-group-item list-group-item-action mb-2" onclick="showPanel(3);" style="border-radius: 0;">
              <div class="container">
                Change username
              </div>
            </a>
          </div>
        </div>
      </div>
      <div class="col-8">
        <div class="container mt-4">
          <div class="card shadow p-4" style="margin: auto;">
            <div class="row" id="info" style="display: block;">
              <div class="col">
                <div class="display-6">Profile information</div>
                <hr>
                <div class="mt-3">
                  <lead>Username:</lead>
                  <h4><%= user.username %></h4>
                </div>

                <div class="mt-3">
                  <lead>E-Mail:</lead>
                  <h4><%= user.email %></h4>
                </div>

                <form method="post" action="/user/remove" enctype="application/x-www-form-urlencoded">
                  <input type="submit" class="btn btn-danger mt-4" style="width:100%" value="DELETE ACCOUNT" onclick="return confirm('Are you sure you want to delete your profile?');"></input>
                </form>
              </div>
            </div>
            <div class="row" id="editEmail" style="display: none;">
              <div class="col">
                <form method="post" action="/user/edit" enctype="application/x-www-form-urlencoded">
                  <div class="display-6">Change E-Mail</div>
                  <hr>
                  <div class="p-2 mt-3">
                    <lead>E-Mail:</lead>
                    <h5><%= user.email %></h5>
                  </div>

                  <div class="mt-2">
                    <lead>New E-mail:</lead>
                    <input type="email" name="value" id="email" class="form-control" placeholder="E-mail" />
                    <input type="hidden" name="type" value="email" />
                  </div>

                  <input type="submit" class="btn btn-success mt-4" style="width:50%" value="Change E-Mail"></input>
                </form>
              </div>
            </div>
            <div class="row" id="editPassword" style="display: none;">
              <div class="col">
                <form method="post" action="/user/edit" enctype="application/x-www-form-urlencoded">
                  <div class="display-6">Change Password</div>
                  <hr>

                  <div class="mt-2">
                    <lead>New password:</lead>
                    <input type="password" name="value" id="password" class="form-control" placeholder="Password" />
                    <input type="hidden" name="type" value="password" />
                  </div>

                  <input type="submit" class="btn btn-success mt-4" style="width:50%" value="Change Password"></input>
                </form>
              </div>
            </div>
            <div class="row" id="editUsername" style="display: none;">
              <div class="col">
                <form method="post" action="/user/edit" enctype="application/x-www-form-urlencoded">
                  <div class="display-6">Change Username</div>
                  <hr>
                  <div class="p-2 mt-3">
                    <lead>Username:</lead>
                    <h5><%= user.username %></h5>
                  </div>

                  <div class="mt-2">
                    <lead>New username:</lead>
                    <input type="text" name="value" id="username" class="form-control" placeholder="Username" />
                    <input type="hidden" name="type" value="username" />
                  </div>

                  <input type="submit" class="btn btn-success mt-4" style="width:50%" value="Change Username"></input>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>


  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous">
  </script>
</body>

</html>