<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
  <link href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css' rel='stylesheet' />

  <title>Document</title>
</head>

<body onload="init()">

    <style>
        #stream-window {
            aspect-ratio: 16/9;
            width: 100%;
            height: 100%;
        }

        .stream-container {
            width: 100%;
            background-color: black;
        }

        .control-container {
            width: 100%;
            text-align: center;
        }

        .movement-control, .stream-control {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            font-size: large;
            border: none;
            background-color: #e9ecef;
            margin: 5px;
        }

        .movement-control:hover {
            background-color: #d1d1d1;
        }

        .movement-control:active {
            background-color: #c1c1c1;
        }

        .movement-control:focus {
            outline: none;
        }

        .movement-control:disabled {
            background-color: #e9ecef;
            opacity: 0.5;
        }

    </style>

    <%- include('../resources/components/new_navbar.ejs') %>

  <div class="container">
    <div class="card">
        <div class="container p-2">
            <div class="stream-container">
                <img src="" alt="" id="stream-window">
            </div>
            <div class="control-container mt-2">
                <!-- Position buttons like wasd on keyboard -->
                <div class="controls">
                    <div class="row">
                        <div class="col-4"></div>
                        <div class="col-4">
                            <button class="movement-control" id="up"><i class="bi bi-arrow-up"></i></button>
                        </div>
                        <div class="col-4"></div>
                    </div>
                    <div class="row d-flex">
                        <div class="col-4 d-flex justify-content-start">
                            <button class="stream-control" id="pause"><i class='bi bi-pause-fill'></i></button>
                        </div>
                        <div class="col-4">
                            <button class="movement-control" id="left"><i class="bi bi-arrow-left"></i></button>
                            <button class="movement-control" id="down"><i class="bi bi-arrow-down"></i></button>
                            <button class="movement-control" id="right"><i class="bi bi-arrow-right"></i></button>
                        </div>
                        <div class="col-4"> </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
  </div>


  <script src="https://bundle.run/buffer@6.0.3"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.1.2/socket.io.min.js"></script>
  <script type="text/javascript" src="http://localhost:5000/static/stream/wsStreaming.js"></script>
  <script type="text/javascript" src="http://localhost:5000/static/stream/streamControls.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>

  <script>
    console.log("Preparing video stream");
    // get img dom element
    const img = document.getElementById('window');
  </script>
</body>

</html>