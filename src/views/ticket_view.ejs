<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Tickets</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous" />
</head>

<body>
  <style>
    .ac {
      color: red;
    }

    .open {
      border-radius: 5px;
      background-color: #3e8551;
      color: #ffffff;
    }

    .inprogress {
      border-radius: 5px;
      background-color: #ccbc41;
      color: #ffffff;
    }

    .finished {
      border-radius: 5px;
      background-color: #cc5441;
      color: #ffffff;
    }

    .admin-comment {
      background-color: #d17465;
      color: #ffffff;
      border-radius: 10px;
      padding: 5px 15px 5px 15px;
      font-size: 16px;
      display: inline;
    }
  </style>

  <%- include('../resources/components/user_navbar.ejs') %>
  <% var counter = 0; %>
  <%
	
	function jsonToString(jsonData, ...keys) {
		if (keys.length > 0) {
			var result = "";
			for (var i = 0; i < keys.length; i++) {
				result += jsonData[keys[i]] + " ";
			}
			return result;
		}
		return JSON.stringify(jsonData, undefined, 2);
	}
	
	%>
  <br>

  <div class="container">
    <div class="card shadow">
      <div class="jumbotron jumbotron-fluid">
        <div class="container">
          <h1 class="display-4 mt-3""><%= ticket.title %></h1>
          <p class=" lead">
            Category: <%= ticket.category %> <br>
            Priority: <%= ticket.priority %> <br>
            Date: <%= ticket.date %> <br>
            </p>
            <div class="row">
              <div class="col-10">
                <% if (user.role === 'admin' && user.id === ticket.author.id && ticket.status != 'finished') { %>
                <a href="/tickets/t/close?id=<%=ticket.id%>" class="btn btn-outline-danger">Close ticket</a>
                <% } %>
              </div>
              <div class="col">
                <div class="p-2 text-center <%= (ticket.status==='Open') ? 'open' : ticket.status==='Finished' ? 'finished' : 'inprogress' %>">
                  <%= ticket.status %>
                </div>
              </div>
            </div>
            <hr class="my-4">
            <p>Description: <%= ticket.description %></p>
            <hr class="my-4">
            <div class="mb-3">
              <p class="display-6">Comments:</p>

              <% for (let comment of ticket.comments) { %>
              <div class="card p-2 mb-1">
                <div>
                  <span class="<%= (user.role == 'admin') ? 'admin-comment' : '' %>">Autor: <%= comment.author %> | Date: <%= new Date(comment.date).toLocaleTimeString('en-UK') %> - <%= new Date(comment.date).toLocaleDateString('en-UK') %></span>
                </div>
                <hr class="my-1">
                <div style="white-space: pre-line"><%= comment.text %></div>
              </div>
              <% } %>
              <% if (ticket.status != 'finished') { %>
              <div class="d-flex justify-content-end mt-3">
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#commentModal">Reply</button>
              </div>
              <% } %>
              </>
            </div>
        </div>
      </div>

      <!-- Modal -->
      <div class="modal fade" id="commentModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered modal-lg">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title">Enter comment</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form method="post" action="/tickets/t/comment" enctype="application/x-www-form-urlencoded">
              <div class="modal-body">
                <input type="hidden" name="ticketId" value="<%= ticket.id %>">
                <input type="hidden" name="userId" value="<%= user.id %>">
                <textarea class="form-control mb-2" onkeyup="updateLength()" name="inputComment" id="commentTextArea" rows="8" placeholder="Enter your comment here..." style="resize: none" maxlength="2000" required></textarea>
                <div id="count">
                  <span id="current_count">0</span>
                  <span id="maximum_count">/ 2000</span>
                </div>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary">Comment</button>
              </div>
            </form>
          </div>
        </div>
      </div>

      <script type="text/javascript">
        function updateLength() {
          var characterCount = document.getElementById('commentTextArea').value.length;
          document.getElementById('current_count').textContent = characterCount;
        }

        var myModalEl = document.getElementById('ticketModal')
        myModalEl.addEventListener('hidden.bs.modal', function(event) {
          document.getElementById('commentTextArea').value = "";
        })
      </script>

      <br>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
</body>

</html>