<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">

  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <title>Changelog</title>
</head>
<style>
  .container-changelog {
    width: 50%;
    margin: auto;
    border: 2px solid #16181a;
    border-radius: 10px;
    height: auto;
    background-color: #212529;
    padding: 10px;
  }

  textarea {
    position: inherit;
    min-height: min-content + 20px;
  }
</style>

<%
  function jsonToString(jsonData, ommit = false, ...keys) {
    var result = {};

    if (ommit) {
      for (var key in jsonData) {
        if (!keys.includes(key)) {
          result[key] = jsonData[key];
        }
      }
      return JSON.stringify(result, null, 2);
    }

    for (var i = 0; i < keys.length; i++) {
      result[keys[i]] = jsonData[keys[i]];
    }
    return JSON.stringify(result, null, 2);
  }
%>


<body>
  <%- include('../resources/components/new_navbar_admin.ejs') %>


  <div class="container-changelog">
    <div class="title">
    </div>
    <div class="form-fluid shadow">
      <div class="card-header">
        <h1 class="display-3 text-light">Add changelog</h1>
      </div>
      <form class="form-inline" action="add" method="post">
        <div class="col mb-2 mt-4">
          <label class="text-light" for="inputTitle">Title</label>
          <input name="inputTitle" type="text" class="form-control" placeholder="Quality control">
        </div>
        <div class="col mb-2 col-md-3 ">
          <label class="text-light" for="inputEmail">Version</label>
          <input name="inputVersion" type="text" class="form-control" placeholder="1.1.3">
        </div>
        <div class="col mb-2">
          <label class="text-light" for="inputPassword">Beta</label>
          <input name="inputIsBeta" type="checkbox" class="form-check-input">
        </div>
        <div class="col mb-2">
          <textarea name="inputDescription" class="form-control" rows="3" placeholder="Add changelog description here"></textarea>
        </div>
        <div class="row">
          <div class="col mb-2">
            <div class="float-end">
              <label for="inputStatus"></label>
              <a href="/admin/dashboard" class="btn btn-danger mb-2">Go back</a>
              <label for="inputStatus"></label>
              <button type="submit" class="btn btn-success mb-2">Submit changes</button>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
  <div class="container-changelog mt-4">
    <div class="card-header">
      <h1 class="display-3 text-light">Latest changelog</h1>
    </div>
    <div class="mb-3">
      <textarea class="form-control" id="floatingTextarea2" rows="10" readonly><%= jsonToString(latestChangelog, true, "_id") %></textarea>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
</body>

</html>