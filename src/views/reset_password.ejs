<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">

  <title>Document</title>
</head>

<style>
  .card {
    width: 50%;
    margin: auto;
    border: 2px solid #ffffff;
    border-radius: 10px;
  }

  .card-header {
    text-align: center;
    margin-bottom: 2rem;
  }
</style>

<body>
  <div class="container mt-5">
    <div class="card shadow">
      <div class="card-header">
        <h1 class="display-6">Reset password</h1>
      </div>
      <form method="post" action="/reset/<%=id%>/<%=ranPart%>">
        <div class="card-body">
          <div class="input-group-sm">
            <label for="password" class="form-label">New password</label>
            <input onkeyup="checkPassword()" type="password" class="form-control" id="password" name="password" placeholder="Enter new password">
          </div>
          <div class="input-group-sm mt-2 mb-4">
            <label for="password" class="form-label">Confirm password</label>
            <input onkeyup="checkPassword()" type="password" class="form-control" id="confirmPassword" name="confirmPassword" placeholder="Confirm new password">
          </div>
        </div>
        <div class="card-footer">
          <div class="d-flex justify-content-center">
            <button type="submit" onclick="return validatePasswords()" class="btn btn-outline-primary">Reset password</button>
          </div>
        </div>
      </form>
    </div>
  </div>

  <script>
    function validatePasswords() {
      var password = document.getElementById("password").value;
      var confirmPassword = document.getElementById("confirmPassword").value;
      if (password != confirmPassword) {
        alert("Passwords do not match.");
        return false;
      }
      return true;
    }

    function checkPassword() {
      var password = document.getElementById("password").value;
      var confirmPassword = document.getElementById("confirmPassword").value;


      if (password != confirmPassword) {
        document.getElementsByName("confirmPassword")[0].style.borderColor = "red";
        document.getElementsByName("confirmPassword")[0].style.borderWidth = "2px";
      } else {
        document.getElementsByName("confirmPassword")[0].style.borderColor = "green";
        document.getElementsByName("confirmPassword")[0].style.borderWidth = "2px";
      }
    }
  </script>

</body>

</html>