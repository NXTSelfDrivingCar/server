<!DOCTYPE html>
<html lang="en">

<head>
  <title>Log in</title>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
</head>

<body>

  <%- include('../resources/components/new_navbar.ejs') %>

  <script>
    function checkPassword() {
      var oPass = document.getElementById('password');
      var oCpass = document.getElementById('password2');
      var pMissmatchDiv = document.getElementById('passwordMissmatch');

      if (oPass.value != oCpass.value) {
        pMissmatchDiv.style.display = "block";
        pMissmatchDiv.hidden = false;

        oCpass.value = "";
        oCpass.focus();
        return false;
      }

      pMissmatchDiv.style.display = "none";
      pMissmatchDiv.hidden = true;

      return true;
    }
  </script>

  <form method="post" action="/register" enctype="application/x-www-form-urlencoded">
    <div class="container mt-4">
      <div class="card shadow p-4" style="width: 600px; margin: auto;">
        <div class="row align-items-center">

          <div class="col">

            <div class="display-6 text-center">Register</div>

            <div class="p-2 mt-3">
              <lead>Username:</lead>
              <input type="text" name="username" id="username" class="form-control" placeholder="Username" required />
            </div>

            <div class="p-2">
              <lead>E-mail:</h4>
                <input type="email" name="email" id="email" class="form-control" placeholder="E-mail" required />
            </div>

            <div class="p-2">
              <lead>Password:</h4>
                <input type="password" name="password" id="password" class="form-control" placeholder="Password" required />
            </div>

            <div class="p-2">
              <lead>Repeat Password:</h4>
                <input type="password" name="password2" id="password2" class="form-control" placeholder="Repat password" required />
            </div>

            <input type="submit" onclick="return checkPassword()" class="btn btn-success mt-3" style="width:100%" value="Register"></input>



            <% if(status==="usernameTaken") { %>
            <br><br>
            <div class="alert alert-danger" role="alert">
              ✗ User already exists!
            </div>
            <% } %>


            <br><br>
            <div id="passwordMissmatch" class="alert alert-danger" hidden="true" role="alert">
              ✗ Passwords do not match!
            </div>
          </div>
        </div>
      </div>
    </div>
  </form>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous">
  </script>
</body>

</html>