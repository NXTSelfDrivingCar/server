<div class="container">
  <div class="card mt-3 p-2 shadow">
    <form method="post" action="/tickets" enctype="application/x-www-form-urlencoded">

      <div class="row">
        <div class="col-4">
          <label for="inputTitle">Priority</label>
          <select name="inputPriority" class="form-control form-select">
            <option>Low</option>
            <option>Medium</option>
            <option>High</option>
          </select>
        </div>
        <div class="col-4">
          <label for="inputTitle">Status</label>
          <select name="inputStatus" class="form-control form-select">
            <option>Open</option>
            <option>In progress</option>
            <option>Finished</option>
          </select>
        </div>
        <div class="col-3">
          <label for="inputTitle">Category</label>
          <select name="inputCategory" class="form-control form-select">
            <option>NTX Robot</option>
            <option>Web Sajt</option>
            <option>Android Aplikacija</option>
            <option>Android GPS</option>
            <option>Ostalo</option>
          </select>
        </div>
        <div class="col-1">
          <div class="d-flex justify-content-end mb-3">
            <button type="submit" class="btn btn-primary mt-4"><i class="bi bi-funnel">Filter</i></button>
          </div>
        </div>
      </div>
    </form>
  </div>
</div>